/*(Enum)
Define a struct with enum Gender and print person's gender.*/
#include <stdio.h>

int main()
{
    enum Gender { MALE, FEMALE, OTHER };

    struct Person {
        char name[50];
        enum Gender gender;
    };

    struct Person p = {"Alex", MALE};

    if (p.gender == MALE)
        printf("Gender: Male");
    else if (p.gender == FEMALE)
        printf("Gender: Female");
    else
        printf("Gender: Other");

    return 0;
}
