/*Write a program to take a string input. Change it to sentence case.*/
#include <stdio.h>
#include <ctype.h>

int main()
{
    char str[200];
    scanf("%[^\n]", str);

    int i = 0;
    int newSentence = 1;

    while(str[i] != '\0')
    {
        if(newSentence && str[i] >= 'a' && str[i] <= 'z')
        {
            str[i] = str[i] - 'a' + 'A';
            newSentence = 0;
        }
        else if(str[i] == '.' || str[i] == '?' || str[i] == '!')
            newSentence = 1;
        else if(str[i] != ' ' && newSentence)
            newSentence = 0;

        i++;
    }

    printf("%s", str);

    return 0;
}
