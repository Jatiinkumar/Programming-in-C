/*
Question: Write a program to find the sum of the series:
1 + 3/4 + 5/6 + 7/8 + â€¦ up to n terms.
*/

#include <stdio.h>

int main()
{
    int n, i, num = 1, den = 1;
    float sum = 0;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++)
    {
        num = 2*i - 1;      // odd numerator
        den = 2*i - 2;      // even denominator

        if(den == 0)
            sum = sum + 1;  // first term is 1
        else
            sum = sum + (float)num / den;
    }

    printf("Sum of the series = %.2f", sum);

    return 0;
}
