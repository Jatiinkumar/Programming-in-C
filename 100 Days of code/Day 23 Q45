/*
Question: Write a program to find the sum of the series:
2/3 + 4/7 + 6/11 + 8/15 + ... up to n terms.
*/

#include <stdio.h>

int main()
{
    int n, i;
    float sum = 0;
    int num, den;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    den = 3;   // first denominator

    for(i = 1; i <= n; i++)
    {
        num = 2 * i;     // numerator: 2, 4, 6, 8...
        sum = sum + (float)num / den;
        den = den + 4;   // denominator increases by 4 each term
    }

    printf("Sum of the series = %.2f", sum);

    return 0;
}
