/* Find the longest word in a sentence */

#include <stdio.h>
int main() {
    char s[500];
    int i = 0, len = 0, maxLen = 0, start = 0, maxStart = 0;

    fgets(s, 500, stdin);

    while(s[i] != '\0') {
        if(s[i] != ' ' && s[i] != '\n') {
            if(len == 0)
                start = i;
            len++;
        } else {
            if(len > maxLen) {
                maxLen = len;
                maxStart = start;
            }
            len = 0;
        }
        i++;
    }

    for(i = maxStart; i < maxStart + maxLen; i++)
        printf("%c", s[i]);

    return 0;
}
